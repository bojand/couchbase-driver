{
  "name": "couchbase-driver",
  "description": "An improved version of the official Couchbase driver",
  "version": "0.1.0",
  "homepage": "https://github.com/bojand/couchbase-driver",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git://github.com/bojand/couchbase-driver.git"
  },
  "bugs": {
    "url": "http://github.com/bojand/couchbase-driver/issues"
  },
  "engines": {
    "node": ">=0.10.0"
  },
  "main": "index.js",
  "author": {
    "name": "Bojan Djurkovic <dbojan@gmail.com>"
  },
  "scripts": {
    "test": "npm run dist && TEST_USE_COUCHBASE_MOCK=true ava -v -s",
    "cover": "nyc mocha",
    "docs": "npm run mddocs && npm run jsdoc",
    "mddocs": "(cat intro.md >> readme.hbs) && (echo \"\n## API Reference\n\n{{>all-docs~}}\" | tee -a readme.hbs) && (jsdoc2md \"lib/**/*.js\" --heading-depth 3 --template readme.hbs > README.md) && rm readme.hbs",
    "jsdoc": "jsdoc -c jsdoc.json -R intro.md",
    "dist": "node ./node_modules/babel-cli/bin/babel.js lib --out-dir dist",
    "prepublish": "npm run dist"
  },
  "dependencies": {
    "async": "^2.0.0",
    "bluebird": "^3.4.1",
    "couchbase": "^2.1.3",
    "debug": "^2.2.0",
    "lodash": "4.10.0"
  },
  "devDependencies": {
    "ava": "^0.15.2",
    "babel-cli": "~6.11.0",
    "babel-plugin-transform-builtin-extend": "~1.1.0",
    "babel-plugin-transform-class-properties": "~6.11.0",
    "babel-preset-es2015": "6.9.0",
    "docdash": "^0.4.0",
    "jsdoc": "^3.4.0",
    "jsdoc-to-markdown": "^1.3.3",
    "nyc": "^7.0.0",
    "xo": "^0.16.0"
  },
  "ava": {
    "files": [
      "test/*.test.js"
    ]
  },
  "xo": {
    "envs": [
      "node",
      "es6",
      "mocha"
    ],
    "esnext": true,
    "space": true,
    "rules": {
      "babel/arrow-parens": 0,
      "babel/object-curly-spacing": 0,
      "babel/object-shorthand": 1,
      "brace-style": [
        0,
        "1tbs",
        {
          "allowSingleLine": false
        }
      ],
      "no-else-return": 1,
      "no-unused-vars": 1,
      "no-prototype-builtins": 0,
      "import/namespace": 0
    }
  },
  "directories": {
    "test": "test"
  },
  "keywords": [
    "couchbase",
    "document",
    "database",
    "odm",
    "data",
    "datastore",
    "db"
  ],
  "config": {
    "nyc": {
      "include": [
        "dist/*.js"
      ]
    }
  }
}
